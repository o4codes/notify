{
    "entryFile": "./src/app.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": [
        "src/controllers/*.ts"
    ],
    "spec": {
        "securityDefinitions": {
            "basic": {
                "type": "apiKey",
                "name": "authorization",
                "in": "header"
            },
            "bearer": {
                "type": "apiKey",
                "name": "authorization",
                "in": "header"
            }
        },
        "outputDirectory": "./src",
        "specVersion": 3
    },
    "routes": {
        "entryFile": "./src/app.ts",
        "routesDir": "./src"
    }
}